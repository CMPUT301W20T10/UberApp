<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor">


    <!--
    StackOverflow post by BOUTERBIAT Oualid:
    https://stackoverflow.com/users/6255927/bouterbiat-oualid
    Answer:
    https://stackoverflow.com/a/38011904
    for information regarding CircleImageView dependencies and setup.
    -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@mipmap/user"
        app:civ_border_color="?attr/backgroundColor"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/uName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="16dp"
        android:text="Username"
        android:textColor="?attr/textColor"/>

    <ImageView
        android:id="@+id/sThmbUp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="48dp"
        app:srcCompat="@mipmap/thmbup" />

    <TextView
        android:id="@+id/sPosRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="54dp"
        android:text="XXXXX"
        android:textColor="?attr/textColor"/>


</RelativeLayout>